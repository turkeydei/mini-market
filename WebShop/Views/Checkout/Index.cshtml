@model List<Application.Features.DTOs.CheckoutItemDto>
@{
    ViewData["Title"] = "Thanh Toán";
}

<div class="container">
    <h2 class="mb-4">Thanh Toán</h2>

    @if (Model != null && Model.Any())
    {
        <div class="row">
            <div class="col-md-8">
                <h4>Thông tin giao hàng</h4>
                <form asp-action="ProcessPayment" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label class="form-label">Địa chỉ giao hàng *</label>
                        <input name="DiaChiGiao" class="form-control" required placeholder="Nhập địa chỉ giao hàng" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Số điện thoại *</label>
                        <input name="SoDienThoai" class="form-control" required placeholder="Nhập số điện thoại" />
                        <span class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ghi chú</label>
                        <textarea name="GhiChu" class="form-control" rows="3" placeholder="Ghi chú cho đơn hàng"></textarea>
                    </div>

                    <input type="hidden" name="PhiVanChuyen" value="30000" />
                    <input type="hidden" name="Provider" value="VNPAY" />

                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <input type="hidden" name="Items[@i].MaHH" value="@Model[i].MaHH" />
                        <input type="hidden" name="Items[@i].TenHH" value="@Model[i].TenHH" />
                        <input type="hidden" name="Items[@i].DonGia" value="@Model[i].DonGia" />
                        <input type="hidden" name="Items[@i].SoLuong" value="@Model[i].SoLuong" />
                        <input type="hidden" name="Items[@i].GiamGia" value="@Model[i].GiamGia" />
                    }

                    <div class="card mb-3">
                        <div class="card-header">
                            <h5>Đơn hàng của bạn</h5>
                        </div>
                        <div class="card-body">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Hình ảnh</th>
                                        <th>Sản phẩm</th>
                                        <th>Giá</th>
                                        <th>Số lượng</th>
                                        <th>Thành tiền</th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        var price = item.DonGia * (1 - item.GiamGia / 100);
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.Hinh))
                                                {
                                                    <img src="@item.Hinh" alt="@item.TenHH" style="width: 50px; height: 50px; object-fit: cover;" />
                                                }
                                                else
                                                {
                                                    <div class="bg-light d-flex align-items-center justify-content-center" style="width: 50px; height: 50px;">
                                                        <span class="text-muted small">N/A</span>
                                                    </div>
                                                }
                                            </td>
                                            <td>@item.TenHH</td>
                                            <td>@price.ToString("N0") VNĐ</td>
                                            <td>@item.SoLuong</td>
                                            <td class="fw-bold">@item.ThanhTien.ToString("N0") VNĐ</td>
                                            <td>
                                                <form asp-action="RemoveFromCart" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="maHH" value="@item.MaHH" />
                                                    <button type="submit" class="btn btn-sm btn-danger">Xóa</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>

                            <div class="text-end mt-3">
                                @{
                                    var subTotal = Model.Sum(x => x.ThanhTien);
                                    var shippingFee = 30000;
                                    var total = subTotal + shippingFee;
                                }
                                <p>Giá trị đơn hàng: <strong>@subTotal.ToString("N0") VNĐ</strong></p>
                                <p>Phí vận chuyển: <strong>@shippingFee.ToString("N0") VNĐ</strong></p>
                                <h4>Tổng cộng: <span class="text-danger">@total.ToString("N0") VNĐ</span></h4>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg w-100">
                        <i class="fas fa-credit-card"></i> Thanh Toán
                    </button>
                </form>

                <div class="mt-3">
                    <a asp-action="Index" asp-controller="HangHoa" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Thông tin thanh toán</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Phương thức:</strong> VNPAY</p>
                        <p><strong>Đơn vị vận chuyển:</strong> Đi trong ngày</p>
                        <p><small class="text-muted">Sau khi đặt hàng thành công, bạn sẽ nhận được email xác nhận.</small></p>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4>Giỏ hàng của bạn đang trống</h4>
            <p class="text-muted">Hãy thêm sản phẩm vào giỏ hàng để tiếp tục</p>
            <a asp-action="Index" asp-controller="HangHoa" class="btn btn-primary">
                <i class="fas fa-shopping-bag"></i> Đi mua sắm ngay
            </a>
        </div>
    }
</div>

