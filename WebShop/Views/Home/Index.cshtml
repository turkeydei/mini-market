@model IEnumerable<Domain.Entities.HangHoa>
@{
    ViewData["Title"] = "Trang Chủ";
}

<div class="hero-section bg-primary text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Chào mừng đến với WebShop</h1>
                <p class="lead">Khám phá những sản phẩm chất lượng với giá cả hợp lý</p>
                <a asp-controller="HangHoa" asp-action="Index" class="btn btn-light btn-lg">Xem Sản Phẩm</a>
            </div>
            <div class="col-lg-6">
                <div class="text-center">
                    <i class="fas fa-shopping-cart fa-10x opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <h2 class="text-center mb-5">Sản Phẩm Nổi Bật</h2>
        </div>
    </div>
    
    @if (Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(item.Hinh))
                        {
                            <img src="@item.Hinh" class="card-img-top" alt="@item.TenHH" style="height: 200px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                                <span class="text-muted">Không có hình ảnh</span>
                            </div>
                        }
                        
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@item.TenHH</h5>
                            <p class="card-text text-muted small">@item.Loai?.TenLoai</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        @if (item.GiamGia > 0)
                                        {
                                            <span class="text-decoration-line-through text-muted small">@item.DonGia.ToString("N0") VNĐ</span>
                                            <br>
                                            <span class="text-danger fw-bold">@((item.DonGia * (1 - item.GiamGia / 100)).ToString("N0")) VNĐ</span>
                                        }
                                        else
                                        {
                                            <span class="fw-bold">@item.DonGia.ToString("N0") VNĐ</span>
                                        }
                                    </div>
                                </div>
                                
                                <div class="mt-2">
                                    <a asp-controller="HangHoa" asp-action="Details" asp-route-id="@item.MaHH" class="btn btn-primary btn-sm w-100">Xem Chi Tiết</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        <div class="text-center mt-4">
            <a asp-controller="HangHoa" asp-action="Index" class="btn btn-outline-primary btn-lg">Xem Tất Cả Sản Phẩm</a>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <h4>Chưa có sản phẩm nào</h4>
            <p class="text-muted">Hãy quay lại sau để xem các sản phẩm mới</p>
        </div>
    }
</div>
