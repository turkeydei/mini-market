@model Domain.Entities.User
@{
    ViewData["Title"] = "Thông tin cá nhân";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle" style="font-size: 5rem; color: #0d6efd;"></i>
                    </div>
                    <h5 class="card-title">@Model.HoTen</h5>
                    <p class="text-muted small">@Model.Email</p>
                    <span class="badge bg-primary">@Model.VaiTro</span>
                </div>
                <div class="list-group list-group-flush">
                    <a href="#" class="list-group-item list-group-item-action active">
                        <i class="bi bi-person"></i> Thông tin cá nhân
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-box"></i> Đơn hàng của tôi
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-heart"></i> Sản phẩm yêu thích
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-lock"></i> Đổi mật khẩu
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-person-badge"></i> Thông tin cá nhân</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Họ và tên</label>
                            <p class="form-control-plaintext">@Model.HoTen</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Email</label>
                            <p class="form-control-plaintext">@Model.Email</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Số điện thoại</label>
                            <p class="form-control-plaintext">@(Model.DienThoai ?? "Chưa cập nhật")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Giới tính</label>
                            <p class="form-control-plaintext">
                                @if (Model.GioiTinh == 0)
                                {
                                    <span>Nam</span>
                                }
                                else if (Model.GioiTinh == 1)
                                {
                                    <span>Nữ</span>
                                }
                                else
                                {
                                    <span>Chưa cập nhật</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Ngày sinh</label>
                            <p class="form-control-plaintext">
                                @(Model.NgaySinh?.ToString("dd/MM/yyyy") ?? "Chưa cập nhật")
                            </p>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label fw-bold">Vai trò</label>
                            <p class="form-control-plaintext">
                                <span class="badge bg-primary">@Model.VaiTro</span>
                            </p>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Địa chỉ</label>
                        <p class="form-control-plaintext">@(Model.DiaChi ?? "Chưa cập nhật")</p>
                    </div>

                    <hr />

                    <div class="d-flex justify-content-between">
                        <a href="#" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Chỉnh sửa thông tin
                        </a>
                        <a href="#" class="btn btn-outline-secondary">
                            <i class="bi bi-lock"></i> Đổi mật khẩu
                        </a>
                    </div>
                </div>
            </div>

            <div class="card mt-4">
                <div class="card-header bg-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Hoạt động gần đây</h5>
                </div>
                <div class="card-body">
                    <div class="list-group">
                        <div class="list-group-item">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">Đăng nhập thành công</h6>
                                <small class="text-muted">Hôm nay</small>
                            </div>
                            <p class="mb-1 small text-muted">Bạn đã đăng nhập vào hệ thống</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

