@model IEnumerable<Domain.Entities.HangHoa>
@{
    ViewData["Title"] = "Sản Phẩm";
}

<div class="row">
    <div class="col-12">
        <h2>Sản Phẩm</h2>
        
        <!-- Search Form -->
        <form method="get" class="mb-4">
            <div class="row">
                <div class="col-md-8">
                    <input name="search" value="@ViewBag.SearchTerm" class="form-control" placeholder="Tìm kiếm sản phẩm..." />
                </div>
                <div class="col-md-4">
                    <button type="submit" class="btn btn-primary">Tìm Kiếm</button>
                    <a asp-action="Index" class="btn btn-secondary">Xóa Bộ Lọc</a>
                </div>
            </div>
        </form>
    </div>
</div>

@if (Model.Any())
{
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    @if (!string.IsNullOrEmpty(item.Hinh))
                    {
                        <img src="@item.Hinh" class="card-img-top" alt="@item.TenHH" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center" style="height: 200px;">
                            <span class="text-muted">Không có hình ảnh</span>
                        </div>
                    }
                    
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@item.TenHH</h5>
                        <p class="card-text text-muted">@item.Loai?.TenLoai</p>
                        <p class="card-text">@item.MoTa</p>
                        
                        <div class="mt-auto">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    @if (item.GiamGia > 0)
                                    {
                                        <span class="text-decoration-line-through text-muted">@item.DonGia.ToString("N0") VNĐ</span>
                                        <br>
                                        <span class="text-danger fw-bold">@((item.DonGia * (1 - item.GiamGia / 100)).ToString("N0")) VNĐ</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold">@item.DonGia.ToString("N0") VNĐ</span>
                                    }
                                </div>
                                <div>
                                    <small class="text-muted">@item.SoLanXem lượt xem</small>
                                </div>
                            </div>
                            
                            <div class="mt-2">
                                <a asp-action="Details" asp-route-id="@item.MaHH" class="btn btn-outline-primary btn-sm">Xem Chi Tiết</a>
                                @if (User.IsInRole("Admin"))
                                {
                                    <a asp-action="Edit" asp-route-id="@item.MaHH" class="btn btn-outline-warning btn-sm">Sửa</a>
                                    <form asp-action="Delete" asp-route-id="@item.MaHH" method="post" class="d-inline" onsubmit="return confirm('Bạn có chắc chắn muốn xóa sản phẩm này?')">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">Xóa</button>
                                    </form>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <h4>Không tìm thấy sản phẩm nào</h4>
        <p class="text-muted">Hãy thử tìm kiếm với từ khóa khác</p>
    </div>
}
