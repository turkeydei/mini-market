@model IEnumerable<Domain.Entities.HoaDon>
@{
    ViewData["Title"] = "Đơn Hàng";
}

<div class="row">
    <div class="col-12">
        <h2>Danh Sách Đơn Hàng</h2>
        
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Mã HD</th>
                            <th>Ngày Đặt</th>
                            <th>Khách Hàng</th>
                            <th>Địa Chỉ Giao</th>
                            <th>Trạng Thái</th>
                            <th>Phí Vận Chuyển</th>
                            <th>Thao Tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaHD</td>
                                <td>@item.NgayDat.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.User?.HoTen</td>
                                <td>@item.DiaChiGiao</td>
                                <td>
                                    <span class="badge bg-primary">@item.TrangThai?.TenTrangThai</span>
                                </td>
                                <td>@item.PhiVanChuyen.ToString("N0") VNĐ</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.MaHD" class="btn btn-sm btn-outline-primary">Xem</a>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <a asp-action="AdminIndex" asp-route-id="@item.MaHD" class="btn btn-sm btn-outline-warning">Quản Lý</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <h4>Chưa có đơn hàng nào</h4>
                <p class="text-muted">Hãy mua sắm để tạo đơn hàng đầu tiên!</p>
                <a asp-controller="HangHoa" asp-action="Index" class="btn btn-primary">Mua Sắm Ngay</a>
            </div>
        }
    </div>
</div>
