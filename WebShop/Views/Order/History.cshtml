@model IEnumerable<Domain.Entities.HoaDon>
@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<div class="container my-5">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-person-circle"></i> Tài khoản
                    </h5>
                </div>
                <div class="list-group list-group-flush">
                    <a asp-controller="Auth" asp-action="Profile" class="list-group-item list-group-item-action">
                        <i class="bi bi-person"></i> Thông tin cá nhân
                    </a>
                    <a asp-controller="Order" asp-action="History" class="list-group-item list-group-item-action active">
                        <i class="bi bi-clock-history"></i> Lịch sử đơn hàng
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">
                        <i class="bi bi-heart"></i> Sản phẩm yêu thích
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="card shadow-sm">
                <div class="card-header bg-white">
                    <h4 class="mb-0">
                        <i class="bi bi-clock-history"></i> Lịch sử đơn hàng
                    </h4>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show">
                            <i class="bi bi-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show">
                            <i class="bi bi-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Mã ĐH</th>
                                        <th>Ngày đặt</th>
                                        <th>Sản phẩm</th>
                                        <th class="text-end">Tổng tiền</th>
                                        <th>Trạng thái</th>
                                        <th>Thanh toán</th>
                                        <th class="text-center">Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model)
                                    {
                                        var statusClass = order.Status switch
                                        {
                                            "Pending" => "warning",
                                            "Processing" => "info",
                                            "Completed" => "success",
                                            "Cancelled" => "danger",
                                            _ => "secondary"
                                        };

                                        var paymentClass = order.PaymentTransaction?.Status switch
                                        {
                                            "Pending" => "warning",
                                            "Completed" => "success",
                                            "Failed" => "danger",
                                            "Cancelled" => "secondary",
                                            _ => "secondary"
                                        };

                                        <tr>
                                            <td>
                                                <strong class="text-primary">#@order.MaHD</strong>
                                            </td>
                                            <td>
                                                <small>@order.NgayDat.ToString("dd/MM/yyyy")</small><br />
                                                <small class="text-muted">@order.NgayDat.ToString("HH:mm")</small>
                                            </td>
                                            <td>
                                                @if (order.ChiTietHDs != null && order.ChiTietHDs.Any())
                                                {
                                                    var firstItem = order.ChiTietHDs.First();
                                                    <div>
                                                        <small>@firstItem.HangHoa?.TenHH</small>
                                                        @if (order.ChiTietHDs.Count > 1)
                                                        {
                                                            <br /><small class="text-muted">+@(order.ChiTietHDs.Count - 1) sản phẩm khác</small>
                                                        }
                                                    </div>
                                                }
                                            </td>
                                            <td class="text-end">
                                                <strong>@order.TongTien.ToString("#,##0") đ</strong>
                                            </td>
                                            <td>
                                                <span class="badge bg-@statusClass">@order.Status</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@paymentClass">
                                                    @order.PaymentTransaction?.Status
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@order.MaHD" 
                                                       class="btn btn-sm btn-outline-primary" 
                                                       title="Xem chi tiết">
                                                        <i class="bi bi-eye"></i>
                                                    </a>
                                                    
                                                    @if (order.Status == "Pending")
                                                    {
                                                        <button type="button" 
                                                                class="btn btn-sm btn-outline-danger" 
                                                                onclick="confirmCancel(@order.MaHD)"
                                                                title="Hủy đơn">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-inbox" style="font-size: 4rem; color: #ccc;"></i>
                            <h4 class="mt-3 text-muted">Chưa có đơn hàng nào</h4>
                            <p class="text-muted">Bạn chưa có đơn hàng nào. Hãy bắt đầu mua sắm ngay!</p>
                            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                                <i class="bi bi-cart"></i> Mua sắm ngay
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Cancel Order Form (Hidden) -->
@if (Model != null && Model.Any())
{
    foreach (var order in Model)
    {
        <form id="cancelForm_@order.MaHD" asp-action="CancelOrder" asp-route-id="@order.MaHD" method="post" style="display: none;">
            @Html.AntiForgeryToken()
        </form>
    }
}

@section Scripts {
    <script>
        function confirmCancel(orderId) {
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
                document.getElementById('cancelForm_' + orderId).submit();
            }
        }
    </script>
}

<style>
    .table td {
        vertical-align: middle;
    }
    
    .btn-group .btn {
        border-radius: 4px;
        margin: 0 2px;
    }
</style>

