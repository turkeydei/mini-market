@model Domain.Entities.HoaDon
@{
    ViewData["Title"] = $"Chi tiết đơn hàng #{Model.MaHD}";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12">
            <!-- Breadcrumb -->
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a asp-action="History">Lịch sử đơn hàng</a></li>
                    <li class="breadcrumb-item active">Đơn hàng #@Model.MaHD</li>
                </ol>
            </nav>

            <!-- Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h3><i class="bi bi-receipt"></i> Chi tiết đơn hàng #@Model.MaHD</h3>
                    <p class="text-muted mb-0">Đặt ngày @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>
                </div>
                <div>
                    <a asp-action="History" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>

            <!-- Status Timeline -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h5 class="card-title mb-4">Trạng thái đơn hàng</h5>
                    <div class="row">
                        <div class="col-md-3 text-center">
                            <div class="status-step @(Model.Status != "Cancelled" ? "active" : "")">
                                <div class="status-icon">
                                    <i class="bi bi-check-circle-fill"></i>
                                </div>
                                <p class="mb-0"><strong>Đã đặt hàng</strong></p>
                                <small class="text-muted">@Model.NgayDat.ToString("dd/MM HH:mm")</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="status-step @(Model.Status == "Processing" || Model.Status == "Completed" ? "active" : "")">
                                <div class="status-icon">
                                    <i class="bi bi-box-seam"></i>
                                </div>
                                <p class="mb-0"><strong>Đang xử lý</strong></p>
                                <small class="text-muted">@(Model.Status == "Processing" || Model.Status == "Completed" ? "Đã xác nhận" : "Chờ xác nhận")</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="status-step @(Model.Status == "Completed" ? "active" : "")">
                                <div class="status-icon">
                                    <i class="bi bi-truck"></i>
                                </div>
                                <p class="mb-0"><strong>Đang giao</strong></p>
                                <small class="text-muted">@(Model.NgayGiao?.ToString("dd/MM HH:mm") ?? "Chưa giao")</small>
                            </div>
                        </div>
                        <div class="col-md-3 text-center">
                            <div class="status-step @(Model.Status == "Completed" ? "active" : "")">
                                <div class="status-icon">
                                    <i class="bi bi-check2-circle"></i>
                                </div>
                                <p class="mb-0"><strong>Hoàn thành</strong></p>
                                <small class="text-muted">@(Model.Status == "Completed" ? "Đã giao" : "Chưa hoàn thành")</small>
                            </div>
                        </div>
                    </div>

                    @if (Model.Status == "Cancelled")
                    {
                        <div class="alert alert-danger mt-3">
                            <i class="bi bi-x-circle"></i> Đơn hàng đã bị hủy
                        </div>
                    }
                </div>
            </div>

            <div class="row">
                <!-- Order Items -->
                <div class="col-md-8">
                    <div class="card shadow-sm mb-4">
                        <div class="card-header bg-white">
                            <h5 class="mb-0"><i class="bi bi-bag"></i> Sản phẩm</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.ChiTietHDs != null)
                            {
                                foreach (var item in Model.ChiTietHDs)
                                {
                                    <div class="row mb-3 pb-3 border-bottom">
                                        <div class="col-md-2">
                                            <div class="product-image bg-light rounded d-flex align-items-center justify-content-center" style="height: 80px;">
                                                <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h6 class="mb-1">@item.HangHoa?.TenHH</h6>
                                            <p class="text-muted small mb-0">
                                                <span class="badge bg-secondary">@item.HangHoa?.Loai?.TenLoai</span>
                                            </p>
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <p class="mb-1">
                                                <span class="text-muted">@item.DonGia.ToString("#,##0") đ × @item.SoLuong</span>
                                            </p>
                                            @if (item.GiamGia > 0)
                                            {
                                                <p class="mb-1 text-danger small">
                                                    Giảm: -@item.GiamGia.ToString("#,##0") đ
                                                </p>
                                            }
                                            <p class="mb-0">
                                                <strong class="text-primary">@item.ThanhTien.ToString("#,##0") đ</strong>
                                            </p>
                                        </div>
                                    </div>
                                }
                            }

                            <!-- Total -->
                            <div class="row mt-3">
                                <div class="col-md-8 offset-md-4">
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Tạm tính:</span>
                                        <span>@((Model.TongTien - Model.PhiVanChuyen).ToString("#,##0")) đ</span>
                                    </div>
                                    <div class="d-flex justify-content-between mb-2">
                                        <span>Phí vận chuyển:</span>
                                        <span>@Model.PhiVanChuyen.ToString("#,##0") đ</span>
                                    </div>
                                    <hr />
                                    <div class="d-flex justify-content-between">
                                        <strong>Tổng cộng:</strong>
                                        <strong class="text-success fs-5">@Model.TongTien.ToString("#,##0") đ</strong>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Order Info Sidebar -->
                <div class="col-md-4">
                    <!-- Customer Info -->
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0"><i class="bi bi-person"></i> Thông tin khách hàng</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-2"><strong>@Model.User?.HoTen</strong></p>
                            <p class="mb-2 small text-muted">
                                <i class="bi bi-telephone"></i> @Model.SoDienThoai
                            </p>
                            <p class="mb-0 small text-muted">
                                <i class="bi bi-envelope"></i> @Model.User?.Email
                            </p>
                        </div>
                    </div>

                    <!-- Delivery Address -->
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0"><i class="bi bi-geo-alt"></i> Địa chỉ giao hàng</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-0">@Model.DiaChiGiao</p>
                        </div>
                    </div>

                    <!-- Payment Info -->
                    <div class="card shadow-sm mb-3">
                        <div class="card-header bg-white">
                            <h6 class="mb-0"><i class="bi bi-credit-card"></i> Thanh toán</h6>
                        </div>
                        <div class="card-body">
                            <p class="mb-2">
                                <strong>Phương thức:</strong><br />
                                <span class="badge bg-info">@Model.PaymentTransaction?.PhuongThucTT</span>
                            </p>
                            <p class="mb-0">
                                <strong>Trạng thái:</strong><br />
                                <span class="badge bg-@(Model.PaymentTransaction?.Status == "Completed" ? "success" : "warning")">
                                    @Model.PaymentTransaction?.Status
                                </span>
                            </p>
                        </div>
                    </div>

                    <!-- Note -->
                    @if (!string.IsNullOrEmpty(Model.GhiChu))
                    {
                        <div class="card shadow-sm mb-3">
                            <div class="card-header bg-white">
                                <h6 class="mb-0"><i class="bi bi-chat-left-text"></i> Ghi chú</h6>
                            </div>
                            <div class="card-body">
                                <p class="mb-0 small">@Model.GhiChu</p>
                            </div>
                        </div>
                    }

                    <!-- Actions -->
                    @if (Model.Status == "Pending")
                    {
                        <div class="d-grid">
                            <button type="button" class="btn btn-danger" onclick="confirmCancel(@Model.MaHD)">
                                <i class="bi bi-x-circle"></i> Hủy đơn hàng
                            </button>
                        </div>

                        <form id="cancelForm" asp-controller="Order" asp-action="CancelOrder" asp-route-id="@Model.MaHD" method="post" style="display: none;">
                            @Html.AntiForgeryToken()
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmCancel(orderId) {
            if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
                document.getElementById('cancelForm').submit();
            }
        }
    </script>
}

<style>
    .status-step {
        position: relative;
        opacity: 0.4;
    }
    
    .status-step.active {
        opacity: 1;
    }
    
    .status-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: #e9ecef;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 10px;
        font-size: 1.5rem;
        color: #6c757d;
    }
    
    .status-step.active .status-icon {
        background: #28a745;
        color: white;
    }
</style>

